@{
    ViewData["Title"] = "Approval";
    ViewBag.Approval = "active";
}

<!-- start page title -->
<div class="row mt-3">
    <div class="col-lg-9 col-sm-12">
        <h5 class="font-black-two fw-semibold">Approval</h5>
    </div>
    <div aria-label="breadcrumb" class="col-lg-3 col-sm-12" id="navlable">
        <ol class="breadcrumb float-end">
            <li><a class="font-black-three" asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a><i class="bi bi-chevron-right"></i></li>
            <li class="font-blue-two" aria-current="page">Approval</li>
        </ol>
    </div>
</div>
<!-- end page title -->


<div class="row">
    <div class="col-12 col-md-12">
        <div class="card border-0 flex-fill w-100 rounded-3 shadow-sm">
            <div class="card-header border-0 bg-white p-0">
                <div class="pt-4 pb-2 ps-4">
                    <h5 class="text-uppercase fw-bold">
                        <i class="bi bi-clipboard-check-fill"></i> Approval
                    </h5>
                    <div class="row">
                        <div class="col-auto pe-4 pb-lg-0 pb-2">
                            <a class="font-black-one" onclick="showBookingId()" id="btnbooking">Booking</a>
                        </div>
                        <div class="col-auto pe-4 pb-lg-0 pb-2">
                            <a class="font-black-one" onclick="showIssueId()" id="btnIssue">Goods Issue</a>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="my-0">
            @*Id = Booking*@
            <div class="ms-3 py-2" id="Dbooking">
                <p>Booking</p>
            </div>

            @*Id = Goods Issue*@
            <div class="ms-3 py-2" id="DGoods_Issue" >
                <p>Goods Issue</p>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#btnbooking').removeClass('font-black-one').addClass('font-blue pb-2 border-bottom border-info border-2');
        $('#Dbooking').show();
        $('#DGoods_Issue').hide();
    });


    function showBookingId() {
        $('#btnbooking').removeClass('font-black-one').addClass('font-blue pb-2 border-bottom border-info border-2');
        $('#btnIssue').removeClass('font-blue pb-2 border-bottom border-info border-2').addClass('font-black-one');
        $('#Dbooking').show();
        $('#DGoods_Issue').hide();
    }
    function showIssueId() {
        $('#btnIssue').removeClass('font-black-one').addClass('font-blue pb-2 border-bottom border-info border-2');
        $('#btnbooking').removeClass('font-blue pb-2 border-bottom border-info border-2').addClass('font-black-one');
        $('#Dbooking').hide();
        $('#DGoods_Issue').show();
    }
</script>